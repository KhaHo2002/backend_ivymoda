    <% if (dataUser) { %>
        <table>
            <tr>
                <th>Id</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Address</th>
                <th>Action</th>
            </tr>

            <% for (let i=0; i < dataUser.length; i++) { %>
                <tr>
                    <td>
                        <%= i %>
                    </td>
                    <td>
                        <%= dataUser[i].fullname %>
                    </td>
                    <td>
                        <%= dataUser[i].email %>
                    </td>
                    <td>
                        <%= dataUser[i].address %>
                    </td>
                    <td>
                        <button type="button"><a href="/detail/<%= dataUser[i].id %>">View</a></button>
                        <form action="/edit/<%= dataUser[i].id %>" method="get" >
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/delete" method="post">
                            <input type="text" hidden value="<%= dataUser[i].id %>" name="userId">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>

                <% } %>
        </table>
    <% } %>
